<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">JRAのレース一覧</h1>
</div>


<% @date_races.each do |date_race| %>
  <h2 class="h4 text-gray-800"><%= date_race.date.strftime('%Y/%m/%d') %></h2>

  <div class="row">
    <% date_race.places.each do |place| %>
      <div class="col-sm-2 mt-2">
        <p class="text-gray-800 font-weight-bold"><%= place %></p>
        <% date_race.races[place].each do |race| %>
          <p><%= link_to "#{race.number}R #{race.name}", jra_race_path(race) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="mt-3">
  <%= paginate @date_races %>
</div>