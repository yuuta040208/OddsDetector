<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">南関競馬のレース一覧</h1>
</div>

<% @date_races.each do |date_race| %>
  <div class="row">
    <% date_race.places.each do |place| %>
      <div>
        <h2 class="h4 text-gray-800">
          <%= date_race.date.strftime('%Y/%m/%d') %><span class="ms-3"><%= place %></span>
        </h2>
        <div class="mt-4">
          <% date_race.races[place].each do |race| %>
            <p class="ms-2"><%= link_to "#{race.number}R #{race.name}", nankan_race_path(race) %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="mt-3">
  <%= paginate @date_races %>
</div>
